<header class="header">
    <div class="container">
        <div class="header-content">
            <div class="header-left">
                <button class="mobile-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="logo" onclick="showSection('home')">
                    <i class="fas fa-calendar-alt"></i>
                    <h1>CodeAcademyEvent</h1>
                </div>
            </div>
            <div class="header-right">
                <div class="auth-buttons">
                    <a class="btn btn-outline-light" asp-area="Admin" asp-controller="Account" asp-action="SignIn">
                        <i class="fas fa-cog"></i>
                        <span class="btn-text">Admin Panel</span>
                    </a>

                    <button class="btn btn-outline-light">
                        <i class="fas fa-sign-in-alt"></i>
                        <span class="btn-text">Login</span>
                    </button>
                    <button class="btn btn-outline-light">
                        <i class="fas fa-user-plus"></i>
                        <span class="btn-text">Signup</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>