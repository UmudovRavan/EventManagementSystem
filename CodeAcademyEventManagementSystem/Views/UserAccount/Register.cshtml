@model CodeAcademyEventManagementSystem.ViewModels.Register.UserSignUpVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CodeAcademyEvent</title>

    <!-- Bootstrap, FontAwesome, Fonts, Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/signUp/css/signup.css" />
</head>

<body>
    <div class="particles" id="particles"></div>

    <div class="auth-container">
        <div class="auth-header">
            <a asp-action="Index" asp-controller="Home" asp-area="" class="logo">
                <i class="fas fa-calendar-alt me-2"></i>CodeAcademyEvent
            </a>
            <h2>Create Account</h2>
            <p>Join CodeAcademyEvent and start your learning journey</p>
        </div>

        <!-- === FORM === -->
        <form asp-action="SignUp" asp-controller="Account" asp-area="Admin" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="divider"><span>or create account with email</span></div>

            <!-- Username -->
            <div class="form-group">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger error-message"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                <i class="fas fa-envelope input-icon"></i>
                <span asp-validation-for="Email" class="text-danger error-message"></span>
            </div>

            <!-- Password -->
            <div class="form-group position-relative">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Create a strong password" />
                <i class="fas fa-eye input-icon" id="togglePassword"></i>
                <span asp-validation-for="Password" class="text-danger error-message"></span>
            </div>

            @* <!-- Confirm Password --> *@
            @* <div class="form-group position-relative"> *@
            @*     <label asp-for="ConfirmPassword" class="form-label"></label> *@
            @*     <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Repeat your password" /> *@
            @*     <i class="fas fa-eye input-icon" id="toggleConfirmPassword"></i> *@
            @*     <span asp-validation-for="ConfirmPassword" class="text-danger error-message"></span> *@
            @* </div> *@

            <!-- Role Selection -->
            <div class="form-group">
                <label asp-for="DesiredPersonRole" class="form-label"></label>
                <select asp-for="DesiredPersonRole" class="form-control" asp-items="Model.AvailablePersonRoles">
                    <option value="">-- Select your role --</option>
                </select>
                <span asp-validation-for="DesiredPersonRole" class="text-danger error-message"></span>
            </div>

            <!-- Accept Terms -->
            @* <div class="terms-checkbox"> *@
            @*     <input asp-for="AcceptTerms" type="checkbox" id="terms" /> *@
            @*     <label for="terms"> *@
            @*         I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a> *@
            @*     </label> *@
            @*     <span asp-validation-for="AcceptTerms" class="text-danger error-message"></span> *@
            @* </div> *@

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">
                <span class="loading" id="loading"></span>
                <span id="buttonText">Create Account</span>
            </button>
        </form>

        <!-- Footer -->
        <div class="auth-footer">
            <p>
                Already have an account?
                <a asp-controller="UserAccount" asp-action="Login">Sign in here</a>
            </p>

        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/signUp/js/signup.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>