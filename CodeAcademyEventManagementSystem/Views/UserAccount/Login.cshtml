@* Model olaraq UserSignInVM istifadə edilməlidir *@
@model CodeAcademyEventManagementSystem.ViewModels.Register.UserSignInVM

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CodeAcademyEvent</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/signIn/css/signin.css" />
</head>
<body>

    <div class="particles" id="particles"></div>

    <div class="auth-container">
        <div class="auth-header">
            <a class="logo">
                <i class="fas fa-calendar-alt me-2"></i>CodeAcademyEvent
            </a>
            <h2>Welcome Back</h2>
            <p>Sign in to your account to continue</p>
        </div>

        @* === DÜZƏLDİLMİŞ FORM BAŞLAYIR === *@
        <form asp-controller="UserAccount" asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group position-relative">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" id="password" />
                <i class="fas fa-eye input-icon" id="togglePassword"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-me">
                @* asp-for istifadə edərək modelə bağlayırıq *@
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">
                <span class="loading" id="loading" style="display:none;"></span>
                <span id="buttonText">Sign In</span>
            </button>

            @* <div class="forgot-password">
                <a asp-action="ForgotPassword" asp-controller="UserAccount">Forgot your password?</a>
            </div> *@
        </form>
        @* === FORM BİTİR === *@

        <div class="auth-footer">
            <p>
                Don't have an account?
                @* Düzgün Register səhifəsinə yönləndirmə *@
                <a asp-controller="UserAccount" asp-action="Register">Sign up here</a>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/signIn/js/signin.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>