@model List<CodeAcademyEventManagementSystem.ViewModels.Event.CurrentEventVM>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Current Events</h5>
        <ul class="list-group">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.Title</span>
                        <span class="badge bg-primary rounded-pill">@item.Date.ToString("dd.MM.yyyy HH:mm")</span>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item">Heç bir cari tədbir yoxdur.</li>
            }
        </ul>
    </div>
</div>
