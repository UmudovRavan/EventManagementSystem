@model CodeAcademyEventManagementSystem.Areas.Admin.Models.SignInVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CodeAcademyEvent</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/signIn/css/signin.css" />
</head>

<body>

    <div class="particles" id="particles"></div>

    <div class="auth-container">
        <div class="auth-header">
            <a class="logo">
                <i class="fas fa-calendar-alt me-2"></i>CodeAcademyEvent
            </a>
            <h2>Welcome Back</h2>
            <p>Sign in to your account to continue</p>
        </div>

        @* === FORM BAŞLAYIR === *@
        <form asp-action="SignIn" asp-controller="Account" asp-area="Admin" method="post" novalidate>
            <div class="divider">
                <span>or sign in with email</span>
            </div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group position-relative">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" id="password" />
                <i class="fas fa-eye input-icon" id="togglePassword"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-me">
                <input type="checkbox" id="rememberMe" name="rememberMe">
                <label for="rememberMe">Remember me for 30 days</label>
            </div>

            <form asp-area="Admin" asp-controller="Dashboard" asp-action="Index" method="get">
                <button type="submit" class="btn btn-primary">
                    <span class="loading" id="loading"></span>
                    <span id="buttonText">Sign In</span>
                </button>
            </form>


            <div class="forgot-password">
                <a asp-action="ForgotPassword" asp-controller="Account" asp-area="Admin">Forgot your password?</a>
            </div>
        </form>
        @* === FORM BİTİR === *@

        <div class="auth-footer">
            <p>
                Don't have an account?
                <a asp-action="SignUp" asp-controller="Account" asp-area="Admin">Sign up here</a>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/signIn/js/signin.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
