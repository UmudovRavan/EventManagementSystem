@model CodeAcademyEventManagementSystem.ViewModels.Location.LocationEditVM

@{
    ViewData["Title"] = "Məkan Redaktə Et";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <h2 class="mb-4">Məkan Redaktə Et</h2>

    <form asp-action="Edit" method="post" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label"></label>
            <input asp-for="Capacity" class="form-control" type="number" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Yadda Saxla</button>
        <a asp-action="Index" class="btn btn-secondary">Ləğv et</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
