@model CodeAcademyEventManagementSystem.ViewModels.Location.LocationCreateVM

@{
    ViewData["Title"] = "Yeni Məkan Yarat";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <h2 class="mb-4">Yeni Məkan Yarat</h2>

    <form asp-action="Create" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label"></label>
            <input asp-for="Capacity" class="form-control" type="number" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success me-2">Yarat</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
